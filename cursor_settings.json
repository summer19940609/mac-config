{
    "debug.console.fontFamily": "JetBrains Mono",
    "debug.console.fontSize": 14,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.codeLensFontFamily": "JetBrains Mono",
    "editor.cursorBlinking": "smooth",
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 18,
    "editor.insertSpaces": false,
    "editor.lineNumbers": "on",
    "editor.minimap.maxColumn": 80,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderLineHighlight": "all",
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": false,
    "editor.tabCompletion": "on",
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hans": true,
        "zh-hant": true
    },
    "editor.unicodeHighlight.includeStrings": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "explorer.fileNesting.expand": false,
    "files.autoSave": "afterDelay",
    "files.exclude": {
        ".DS_Store": true,
        "**/bower_components": true,
        "**/build": true,
        "**/tmp": true,
        "node_modules": true
    },
    "files.watcherExclude": {
        "**/bower_components/**": true,
        "**/dist/**": true,
        "**/tmp/**": true
    },
    "git.autofetch": true,
    "git.autofetchPeriod": 60,
    "git.confirmSync": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "markdown.preview.fontSize": 16,
    "scm.inputFontSize": 14,
    "search.quickOpen.history.filterSortOrder": "recency",
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.fontSize": 18,
    "update.showReleaseNotes": false,
    "window.dialogStyle": "custom",
    "window.title": "${rootName}",
    "workbench.colorTheme": "Default Light Modern",
    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.splitInGroupLayout": "vertical",
    "workbench.editor.wrapTabs": true,
    "workbench.list.smoothScrolling": true,
    "workbench.tree.enableStickyScroll": false,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.dragAndDrop": false,
    "editor.padding.top": 2,
    "editor.scrollbar.verticalScrollbarSize": 24,
    "editor.find.addExtraSpaceOnTop": false,
    "editor.find.seedSearchStringFromSelection": "never",
    "workbench.editor.highlightModifiedTabs": true,
    "extensions.ignoreRecommendations": true,
    "window.zoomLevel": 1,
    "search.exclude": {
        "**/node_modules": false
    },
    "workbench.colorCustomizations": {
        "focusBorder": "#F7F7F7",
        "editor.selectionHighlightBorder": "#0000"
    },
    "gitlens.graph.minimap.enabled": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 15,
    "breadcrumbs.enabled": true,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.shellIntegration.history": 1000,
    "editor.bracketPairColorization.enabled": true,
    "terminal.integrated.cursorStyle": "line",
    "chat.commandCenter.enabled": false,
    "update.mode": "none",
    "window.commandCenter": true,
    "cursor.cpp.enablePartialAccepts": true,
    "workbench.editor.tabSizingFixedMaxWidth": 100,
    "workbench.editor.tabSizingFixedMinWidth": 100,
    "workbench.activityBar.orientation": "vertical",
    "git.allowNoVerifyCommit": true,
    "git.confirmNoVerifyCommit": false,
    "window.newWindowDimensions": "inherit",
    "explorer.confirmDelete": false,
    "cursor.general.disableHttp2": true,
}
